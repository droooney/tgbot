{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "outDir": "./dist",
    "lib": ["ESNext"],
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules/*", "**/dist/*"]
}
